<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Quote Calculator</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://kit.fontawesome.com/a2c9d7080d.js" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  </head>
  <body>
    <!-- include header -->
    <%- include('include/header') %>
    <!-- /include header -->

    <div class="main-content">
      
  
      <div class="row">
          <div class="column-1" >
              <div class="vertical-menu">
                  <a href="/quote-portal" class="active">Quote Calculator</a>
                  <a href="/accepted-quotes">Accepted Quotes</a>
                  <a href="/drafted-quotes">Draft Quotes</a>
                  <a href="/my-quote-requests">Custom Quote Requests</a>
                </div>
          </div>
          <div class="column-2" >
            <div style="text-align:right;margin-bottom: 20px;">
              <a href="/request-a-quote" class="btn btn-primary" >Request Custom Quote</a>
            </div>
            
            
            <div class="card">
              <div class="card-body">
                
                <h2>Automatic Quote Calculator</h2>
       
                <form action="generate-quote" method="POST">
                  <hr>
                  <h4>Customer Information</h4>
                  
                  <div class="form-group2">
                    
                    <div class="form-cell">
                      <label for="name">Name</label>
                      <input  type="text" class="form-control" readonly  id="name" aria-describedby="emailHelp" placeholder="Enter Name:" name="name" value="<%= data[0].name%>">
                    </div>
                    
                  </div>

                  <hr>
                  <h4>Origin</h4>
                  <div class="form-group2">
                    
                    <div class="form-cell">
                      <label for="pickupcountry" >Origin Country:</label>
                        <select required  class="form-control" name="pickupcountry" id="pickupcountry">
                            <option value="China">China</option>
                            <option value="United States">USA</option>
                        </select>
                    </div>
                    
                    <div class="form-cell">
                      <label for="loadingPort" >Port / Airport of Loading:</label>
                        <select required  class="form-control" name="loadingPort" id="loadingPort">
                            <option value="CN PVG - Shanghai Pudong International Airport">AIR - CN PVG - Shanghai Pudong International Airport</option>
                            <option value="CNPEK, Beijing">AIR - CNPEK, Beijing</option>
                            <option value="CNCAN -  GUANGZHOU">AIR - CNCAN -  GUANGZHOU</option>
                            <option value="O'hare Airport Chicago">AIR - O'hare Airport Chicago</option>
                            <option value="Garden City Regional Airport">AIR - Garden City Regional Airport</option>
                            <option value="Shanghai Pudong International Airport">SEA - Shekou Port</option>
                            <option value="CNSHG - Shanghai Port">SEA - CNSHG - Shanghai Port</option>
                        </select>
                    </div>

                    <div class="form-cell">
                      <label for="incoterms">Incoterms:</label>
                      <select required class="form-control" name="incoterms" id="incoterms" onchange="hideAddress()" onfocus="this.selectedIndex = -1;">
                          <option value="EXW">Ex-Works</option>
                          <option value="FOB">Free On-Board</option>
                      </select>
                    </div>
                    
                  </div>

                  <div class="form-group2 ">
                    <div class="form-cell EXW">
                      <label for="pickupAddress">Origin Address:</label>
                      <input type="String" class="form-control"  id="pickupAddress" name="pickupAddress" >
                    </div>
                  </div>
                  
                  <hr>
                  <h4>Destination</h4>
                  <div class="form-group2">
                    
                    <div class="form-cell">
                      <label for="deliveryAddress">Delivery Address:</label>
                      <input  type="text"  class="form-control" readonly id="deliveryAddress" aria-describedby="emailHelp" placeholder="Enter Name:" name="deliveryAddress" value="<%= data[0].deliveryAddress%>">
                    
                    </div>
                    
                    <div class="form-cell">
                      <label for="shippingMethod">Shipping Method:</label>
                      <select required class="form-control" name="shippingMethod" id="shippingMethod" >
                          <option value="Air Freight">Air Freight</option>
                          <option value="Sea Freight">Sea Freight</option>
                      </select>
                    </div>
                    
                    
                    <div class="form-cell">
                      <label for="shippingSpeed">Shipping Speed:</label>
                      <select required class="form-control" name="shippingSpeed" id="shippingSpeed" >
                          <option value="Express">Express</option>
                          <option value="Transhipment">Transhipment</option>
                          <option value="Direct">Direct</option>
                      </select>
                    </div>
                    
                  </div>

                  <div class="form-group2">
                    <div class="form-cell airFreight">
                      <label for="noOfBoxes">No. of  Boxes:</label>
                      <input type="number" class="form-control" required id="noOfBoxes" name="noOfBoxes" >
                    </div>

                    <div class="form-cell airFreight">
                      <label for="withPallet">Should we put your boxes in a pallet? Additional 20kg</label>
                      <select required class="form-control " name="withPallet" id="withPallet">
                        <option value="Yes">Yes</option>
                        <option value="No">No</option>
                    </select>
                    </div>

                    <div class="form-cell seaFreight">
                      <label for="containerSize">Container Type:</label>
                      <select  class="form-control " name="containerSize" id="containerSize">
                        <option value="40' FCL GP">20' FCL GP</option>
                        <option value="20' FCL GP">40' FCL GP</option>
                    </select>
                    </div>

                    <script>

                    </script>
  
                  </div>

                  
                  <hr>
                  <h4>Dimensions / Box</h4>
                  <div class="form-group2">
                    
  
                    <div class="form-cell">
                      <label for="length">Length (cm):</label>
                      <input type="number" class="form-control" required id="length" name="length" onkeyup="computeWeight()">
                    </div>
  
                    <div class="form-cell">
                      <label for="width">Width  (cm):</label>
                      <input type="number" class="form-control" required id="width" name="width"  onkeyup="computeWeight()">
                    </div>
  
                    <div class="form-cell">
                      <label for="height">Height  (cm):</label>
                      <input type="number" class="form-control" required id="height" name="height"  onkeyup="computeWeight()">
                    </div>
  
                    <div class="form-cell">
                      <label for="weight">Weight (kg):</label>
                      <input type="number" class="form-control" required id="weight" name="weight" onkeyup="computeWeight()">
                    </div>
  
                  </div>
                  
                  
                  <hr>
                  <h4>Chargeable Weight</h4>
                  <div class="form-group2">
                    <div class="form-cell">
                      <br><span><b> <input type="text" style="display: inline;border:none;" id="chargeableWeight" name="chargeableWeight" ></b> kg</span>
                    </div>
                    
                  </div>
  
                  
                  
      
                  <script>
                    function computeWeight() {
                      var chargeableWeight = document.getElementById("chargeableWeight");
                      var l = parseFloat(document.getElementById("length").value);
                      var w = parseFloat(document.getElementById("width").value);
                      var h = parseFloat(document.getElementById("height").value);
                      var noOfBoxes = parseFloat(document.getElementById("noOfBoxes").value);
                      var cbm;
                      var shippingMethod = document.getElementById("shippingMethod").value;
                      var withPallet = document.getElementById("withPallet").value;

                      if(l!="" && w!="" && h!="" && noOfBoxes!=""){
                        
                        if(shippingMethod === "Air Freight"){
                          if(withPallet === "Yes"){
                            cbm = ((l*w*h)/4500) * noOfBoxes;
                            chargeableWeight.value=cbm + (20*noOfBoxes);
                          }
                          else{
                            cbm = ((l*w*h)/4500) * noOfBoxes;
                            chargeableWeight.value=cbm;
                          }
                          
                        }
                        else{
                          if(withPallet === "Yes"){
                            cbm = ((l*w*h)/3500) * noOfBoxes;
                            chargeableWeight.value=cbm + (20*noOfBoxes);
                          }
                          else{
                            cbm = ((l*w*h)/4500) * noOfBoxes;
                            chargeableWeight.value=cbm;
                          }
                        }
                      }
                      else{
                        chargeableWeight.value=0;
                      }
                      
                    }
                    
                   
                    
  
                  </script>
                  
                    <button type="submit" class="btn btn-primary" >Generate Quote</button>
                  
                  
                </form>
          </div>
        </div>
  
  
  
          </div>
      </div>
    </div>
    
  </body>
</html>
